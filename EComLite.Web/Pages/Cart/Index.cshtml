@page
@model EComLite.Web.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Cart";
}

<h1>Your Cart</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

@if (!Model.Items.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product(s)</th>
                <th>Unit Price</th>
                <th>Qty</th>
                <th>Total</th>
                <th class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@item.Qty</td>
                <td>@((item.Qty * item.UnitPrice).ToString("C"))</td>
                <td class="text-end">
                    <form method="post" asp-page-handler="Remove" class="d-inline">
                        <input type="hidden" name="productId" value="@item.ProductId" />
                        <button type="submit" class="btn btn-link text-danger btn-sm">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end fw-bold">Total</td>
                <td class="fw-bold">@Model.Total.ToString("C")</td>
            </tr>
        </tfoot>
    </table>

    <div class="mt-3">
        <form method="post" asp-page-handler="Checkout" class="d-inline">
            <button type="submit" class="btn btn-primary">
                Checkout
            </button>
        </form>

        <form method="post" asp-page-handler="Clear" class="d-inline ms-2">
            <button type="submit" class="btn btn-danger">
                Clear Cart
            </button>
        </form>
    </div>


}

