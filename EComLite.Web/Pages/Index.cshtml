@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="home-hero">
    <div class="home-hero-inner">
        <h1 class="home-hero-title">Welcome to <span>EComLite</span></h1>
        <p class="home-hero-subtitle">
            A lightweight e-commerce demo for GRAD-695 – Applied Project
        </p>

        <div class="home-hero-actions">
            <a asp-page="/Products/Index" class="btn home-primary-btn">
                Browse Products
            </a>
            <a asp-page="/Orders/Index" class="btn home-secondary-btn">
                View My Orders
            </a>
        </div>

        <div class="home-hero-meta">
            Signed in as <strong>@User.Identity?.Name</strong>
        </div>
    </div>
</div>

<div class="home-section">
    <div class="home-section-header">
        <h2>What’s inside this demo?</h2>
        <p>Key features implemented for the EComLite Applied Project.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="home-feature-card">
                <h3>Product Catalog</h3>
                <p>
                    Browse a list of demo products stored in SQL Server.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="home-feature-card">
                <h3>Cart &amp; Checkout</h3>
                <p>
                    Add items to the shopping cart and place orders with one click.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="home-feature-card">
                <h3>Order History</h3>
                <p>
                    View your past orders, including total amount and order status, linked to your account.
                </p>
            </div>
        </div>
    </div>
</div>
