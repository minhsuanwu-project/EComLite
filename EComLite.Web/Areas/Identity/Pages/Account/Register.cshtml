@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Pages/Shared/_AuthLayout.cshtml";
}

<div class="auth-main">
    <div class="card login-card-custom">
        <div class="card-body">
            <div class="text-center mb-4">
                <h2 class="login-title mb-2">Create your EComLite account</h2>
                <p class="login-subtitle-text mb-0">
                    Sign up to start browsing products and placing orders.
                </p>
            </div>

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                @Html.AntiForgeryToken()  

                <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label text-secondary">Email</label>
                    <input asp-for="Input.Email"
                           class="form-control login-input"
                           autocomplete="username"
                           placeholder="you@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label text-secondary">Password</label>
                    <input asp-for="Input.Password"
                           type="password"
                           class="form-control login-input"
                           autocomplete="new-password"
                           placeholder="Enter a password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.ConfirmPassword" class="form-label text-secondary">Confirm password</label>
                    <input asp-for="Input.ConfirmPassword"
                           type="password"
                           class="form-control login-input"
                           autocomplete="new-password"
                           placeholder="Re-enter your password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn login-btn-blue text-white w-100">
                    Register
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
